{
  "manifest_version": 3,
  "name": "ChatGPT Model Picker",
  "version": "1.0.1",
  "description": "Keyboard shortcuts for quickly selecting ChatGPT models",
  "homepage_url": "https://github.com/mmorearty/chatgpt-model-picker",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "ChatGPT Model Picker"
  }
}
